<?xml version="1.0" encoding="UTF-8"?>

    <RelativeLayout tools:context="com.melissarinch.ontrackdemoc.HomeActivity"
    android:layout_height="match_parent" android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">

    <Button
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_alignParentStart="true"
        android:id="@+id/ble"
        android:textStyle="bold" android:gravity="center"
        android:padding="10dp"
        android:text="BLUETOOTH"
        android:textSize="25dp"/>

    <ImageView android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="66dp"
        android:layout_marginStart="21dp"
        android:src="@drawable/activity"
        android:id="@+id/activity"/>

    <ImageView android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:src="@drawable/nutrition"
        android:id="@+id/nutrition"
        android:layout_alignEnd="@+id/sleep"
        android:layout_alignTop="@+id/mindfulness"/>

    <ImageView android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:src="@drawable/sleep"
        android:id="@+id/sleep"
        android:layout_alignTop="@+id/activity"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="19dp"/>

    <ImageView android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="23dp"
        android:src="@drawable/mindfulness"
        android:id="@+id/mindfulness"
        android:layout_alignStart="@+id/activity"
        android:layout_below="@+id/activity"/>

    <Button android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_alignParentStart="true"
        android:id="@+id/run"
        android:layout_alignParentBottom="true"
        android:textStyle="bold" android:gravity="center"
        android:background="@color/runGreen"
        android:textColor="@android:color/white"
        android:padding="10dp"
        android:text="RUN"
        android:textSize="30dp"/>

</RelativeLayout>