<?xml version="1.0" encoding="UTF-8"?>

    <RelativeLayout tools:context="com.melissarinch.ontrackdemoc.HomeActivity" android:layout_height="match_parent" android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageButton android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_alignParentStart="true" android:layout_alignParentTop="true" android:layout_marginTop="66dp" android:layout_marginStart="21dp" android:src="@drawable/activity" android:onClick="toActivity" android:id="@+id/activity"/>

