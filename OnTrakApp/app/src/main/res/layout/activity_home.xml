<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.melissarinch.ontrakdemo2.HomeActivity">


    <ImageButton
        android:id="@+id/activity"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:onClick="toActivity"
        android:src="@drawable/activity"
        android:layout_marginStart="21dp"
        android:layout_marginTop="66dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:contentDescription="" />

    <ImageButton
        android:id="@+id/nutrition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="toActivity"
        android:src="@drawable/nutrition"
        android:layout_alignTop="@+id/mindfulness"
        android:layout_alignEnd="@+id/sleep"
        android:contentDescription="" />
    <ImageButton
        android:id="@+id/sleep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="toActivity"
        android:src="@drawable/sleep"
        android:layout_marginEnd="19dp"
        android:layout_alignTop="@+id/activity"
        android:layout_alignParentEnd="true" />
    <ImageButton
        android:id="@+id/mindfulness"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="toActivity"
        android:src="@drawable/mindfulness"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/activity"
        android:layout_alignStart="@+id/activity" />



    <Button
        android:id="@+id/run"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="@string/run"
        android:padding="10dp"
        android:textColor="@android:color/white"
        android:background="@color/runGreen"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="@string/bluetooth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btButton"
        android:visibility="visible"
        android:onClick="toDeviceList"
        android:layout_above="@+id/sleep"
        android:layout_toEndOf="@+id/activity"
        android:layout_marginBottom="26dp"
        android:layout_alignParentTop="true" />
</RelativeLayout>
